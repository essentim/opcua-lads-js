{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "es6",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "removeComments": false,
        "importHelpers": true,
        "inlineSourceMap": true,
        "listFiles": false,
        "traceResolution": false,
        "pretty": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "lib": ["es2017", "es2017.object"],
        "types": ["node"],
        "baseUrl": ".",
        "outDir": "./dist",
        "composite": true,
        "incremental": true,
        "rootDir": "./source",
    },
    "exclude": ["node_modules", "dist"],
    "include": ["source/**/*.ts"],
    "compileOnSave": false,
}
